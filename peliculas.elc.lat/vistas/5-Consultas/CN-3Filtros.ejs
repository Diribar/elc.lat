<% const {filtros} = configsCons %>
<!-- Campos -->
<div id="configFiltros" class="flexCol sectorConDesplV">
	<nav class="startUp flexCol ocultar">
		<!-- PRIORITARIOS -->
		<!-- Tipos de Link -->
		<%- include('CN-Select', {campo: configsCons.filtros.tiposLink}) %>
		<% if (locals.usuario) { %>
			<!-- Preferencia por Película -->
			<%- include('CN-Select', {campo: filtros.pppOpciones, eventual: true}) %>
		<% } %>
		<!-- Idioma -->
		<%- include('CN-Select', {campo: filtros.idiomas, eventual: true}) %>
		<!-- Público Recomendado -->
		<%- include('CN-SelectPublico', {campo: filtros.publicos}) %>

		<!-- RELACIONADO CON LA IGLESIA CATÓLICA -->
		<!-- Proceso de Canonización -->
		<%- include('CN-Select', {campo: filtros.canons, eventual: true, color: 'cfc'}) %>
		<!-- Roles Iglesia -->
		<%- include('CN-Select', {campo: filtros.rolesIgl, eventual: true, color: 'cfc'}) %>
		<!-- Aparición Mariana -->
		<%- include('CN-Select', {campo: filtros.apMar, eventual: true, color: 'cfc'}) %>

		<!-- HECHOS REALES -->
		<!-- Basado en Hechos Reales -->
		<%- include('CN-Select', {campo: filtros.bhr, eventual: true, color: 'bhr'}) %>
		<!-- Época de Ocurrencia -->
		<%- include('CN-Select', {campo: filtros.epocasOcurrencia, color: 'bhr'}) %>

		<!-- ATRIBUTOS DE LA PELÍCULA -->
		<!-- Tema -->
		<%- include('CN-Select', {campo: filtros.temas}) %>
		<!-- Época de Estreno -->
		<%- include('CN-Select', {campo: filtros.epocasEstreno}) %>
		<!-- Tipo de Actuación -->
		<%- include('CN-Select', {campo: filtros.tiposActuacion}) %>
		<!-- Miscelaneas -->
		<%- include('CN-Select', {campo: filtros.miscelaneas}) %>

		<!-- Palabras Clave -->
		<div id="palabrasClave" class="pref ocultaFiltro">
			<input type="text" name="palabrasClave" class="prefSimple" placeholder="Buscar por palabras clave">
			<i id="palClaveIcono" class="<%= iconos.faSolid %> scale" title="Aplicar las palabras"></i>
		</div>
	</nav>
</div>

<!-- Muestra / Oculta filtros -->
<div id="toggleFiltros" class="flexCol">
	<div id="muestraFiltros" class="pointer scale">
		<em>Click</em> para <span>ver</span><br>más filtros
	</div>
	<div id="ocultaFiltros" class="pointer scale ocultaFiltros">
		<em>Click</em> para <span>ocultar</span><br>los filtros sin usar
	</div>
</div>
