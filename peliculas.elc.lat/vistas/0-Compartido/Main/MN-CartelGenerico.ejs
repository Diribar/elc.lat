<section id="todoElMain" class="<%- !locals.informacion ? 'ocultar' : '' %>">
	<!-- Tapar el fondo -->
	<div id="tapaElFondo" class="<%- !locals.informacion ? 'ocultar' : '' %>"></div>

	<!-- Cartel -->
	<div id="cartelGenerico" class="cartelCentro absoluteCentro flexColAlign <%- !locals.informacion ? 'ocultar' : informacion.check ? 'check' : informacion.trabajando ? 'trabajando' : '' %>">
		<div id="encab" class="flexColAlign">
			<!-- Íconos -->
			<i id="alerta" class="<%= iconos.faSolid %> fa-triangle-exclamation inicio<%- locals.informacion && (locals.informacion.check || locals.informacion.trabajando) ? ' ocultar' : '' %>"></i>
			<img id="check" src="/imgsComp/9-Varios/Check.png" class="inicio<%- !locals.informacion || !locals.informacion.check ? ' ocultar' : '' %>" height="60px">
			<i id="trabajando" class="<%= iconos.faSolid %> fa-tools inicio<%- !locals.informacion || !locals.informacion.trabajando ? ' ocultar' : '' %>"></i>

			<!-- Título -->
			<h1 id="titulo"><%= locals.informacion ? informacion.titulo : '' %></h1>
		</div>

		<div id="contenedorMensajes">
			<% if (locals.informacion) { %>
				<!-- Averigua el horario local -->
				<% if (informacion.horario && informacion.mensajes) { %>
					<% const horario = new Date(informacion.horario); %>
					<% const fechaResp = horario.getDate() + "/" + mesesAbrev[horario.getMonth()]; %>
					<% const hora = horario.getHours(); %>
					<% const minutos = String(horario.getMinutes()).padStart(2, "0"); %>
					<% const horaResp = " a las " + hora + ":" + minutos + "hs"; %>
					<% const horarioLocal = fechaResp + horaResp; %>
					<% informacion.mensajes = informacion.mensajes.map(n => n.replace("[horario]", horarioLocal)) %>
				<% } %>
				<% if (informacion.ol) { %>
					<ol id="mensajes" type="<%- informacion.mensajes.length > 1 ? '1' : 'none' %>">
						<% for (mensaje of informacion.mensajes) { %>
							<li><%- mensaje %></li>
						<% } %>
					</ol>
				<% } else { %>
					<ul id="mensajes" type="<%- informacion.mensajes.length > 1 ? 'disc' : 'none' %>">
						<% for (mensaje of informacion.mensajes) { %>
							<li><%- mensaje %></li>
						<% } %>
					</ul>
				<% } %>
			<% } %>
		</div>
		<% if (locals.informacion && informacion.iconos) { %>
			<div
				id="iconosCartel"
				<% if (informacion.bienvenido) { %>class="bienvenido"<% } %>
			>
				<% informacion.iconos.forEach((icono, i) => { %>
					<% let autoFocus = informacion.iconos.length == 1 || icono.autofocus %>
					<a
						<% if (icono.id) { %>id="<%= icono.id %>"<% } %>
						<% if (icono.link) { %>href="<%= icono.link %>"<% } %>
						tabindex="<%= i + 1 %>"
						<% if (autoFocus) { %>autofocus<% } %>
					>
						<i class="<%= iconos.faSolid %> <%= icono.clase %>" title="<%= icono.titulo %>"></i>
					</a>
				<% }) %>
			</div>
		<% } %>
	</div>
</section>
